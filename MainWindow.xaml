<Window x:Class="painter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:painter"
        mc:Ignorable="d"
        Title="2023 WPF Painter" Height="730" Width="1050">
    <DockPanel LastChildFill="False">
        <Menu DockPanel.Dock="Top" Height="25">
            <MenuItem Header="檔案" VerticalAlignment="Center">
                <MenuItem Header="新增畫布"/>
            </MenuItem>
            <MenuItem Header="工具" VerticalAlignment="Center"/>
        </Menu>
        <ToolBarTray DockPanel.Dock="Top" Height="40" Background="#FFECDEDD">
            <ToolBar HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" Width="500" Background="#FF93C6FF">
                <Label Content="筆刷色彩" VerticalAlignment="Center" FontSize="18"/>
                <xctk:ColorPicker x:Name="strokecolorpicker" Width="150" DisplayColorAndName="True"/>
                <Label Content="筆刷大小" VerticalAlignment="Center" FontSize="18"/>
                <Slider x:Name="stroke_slider" Width="120" Value="1" Minimum="1" Maximum="72" VerticalAlignment="Center" IsSnapToTickEnabled="True" ValueChanged="stroke_ValueChanged"/>
                <Label Content="{Binding Value, ElementName=stroke_slider}" VerticalContentAlignment="Center" FontSize="18"/>
            </ToolBar>
            <ToolBar HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" Width="350">
                <RadioButton Content="直線" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18" Height="29" Width="60" Click="ShapeButton_Click" Tag="Line" IsChecked="True"/>
                <RadioButton Content="矩形" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18" Height="29" Width="60" Click="ShapeButton_Click" Tag="Rectangle"/>
                <RadioButton Content="橢圓" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18" Height="29" Width="60" Click="ShapeButton_Click" Tag="Ellipse"/>
            </ToolBar>
        </ToolBarTray>
        <Canvas x:Name="myCanvas" DockPanel.Dock="Top" Background="#FFFFFDF5" Height="605" MouseLeftButtonDown="myCanvas_MouseLeftButtonDown" MouseMove="myCanvas_MouseMove"/>
        <StatusBar x:Name="myStatusBar" DockPanel.Dock="Bottom" Height="40"/>
    </DockPanel>
</Window>
